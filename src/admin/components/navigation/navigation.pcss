.list {
  display: flex;
}

.link {
  display: block;
  box-sizing: border-box;
  border-bottom: 3px solid transparent;
  padding: 30px;
  font-size: 16px;
  font-weight: normal;
  color: #414C63;
  text-decoration: none;
  
  &:hover {
    border-bottom: 3px solid #383BCF;
    font-weight: 600;
    color: #383BCF;
  }
}

.active {
  border-bottom: 3px solid #383BCF;
  font-weight: 600;
  color: #383BCF;
}