@import "../../../styles/mixins.pcss";

.form-component {
  color: #414C63;
}

.form-cols {
  display: flex;

  @include tablets {
    flex-direction: column;
    align-items: center;
  }
}

.form-col {
  width: 50%;
  margin-right: 30px;
  
  @include tablets {
    width: 100%;
    padding: 0 16vw;
    margin-right: 0px;
  }

  @include phones {
    padding: 0;
  }

  &:last-child {
    margin-right: 0;
  }
}

.uploader {
  min-height: 276px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: #dee4ed;
  border: 1px dashed #a1a1a1;
  padding: 0 23%;
  text-align: center;
  position: relative;
  background-size: cover;
  
  &.active {
    .uploader-title {
      background: rgba(#fff, .9);
    }
  }

  &.hovered {
    border-color: blue;
  }
}

.uploader-title {
  color: $text-color;
  opacity: .5;
  margin-bottom: 30px;
}

.form-row {
  margin-bottom: 30px;
}

.form-btns {
  display: flex;
  justify-content: flex-end;
}

.btn {
  margin-right: 10px;

  &:last-child {
    margin-right: 0;
  }
}

