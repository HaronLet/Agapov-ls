.user-min {
  display: flex;
  align-items: center;
}

.user-min__avatar {
  margin-right: 30px;
}

.user-min__pic-wrapper {
  width: 74px;
  height: 74px;
  border-radius: 50%;
  overflow: hidden;
}

.user-min__avatar-pic {
  max-height: none;
  object-fit: none;
  object-position: center top;
}

.user-min__name {
  margin-bottom: 16px;
  font-size: 18px;
  font-weight: bold;
}

.user-min__occ {
  font-weight: 600;
  color: rgba($text-color, .3);
}

