.hero {
  position: relative;
  padding-top: 54px;
}

.hero__container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.hero__content {
  flex: .8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero__downbutton {
  position: absolute;
  bottom: 4%;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}