.user__avatar {
  display: flex;
  justify-content: center;
  margin-bottom: 70px;
}

.user__avatar-wrapper {
  flex-shrink: 0;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  box-shadow: 0px 10px 24px 0 rgba(#000, .3);
  overflow: hidden;
  margin: 0 70px;
}

.user__table {
  width: 100%;
  font-weight: 600;

  td {
    padding-bottom: 15px;
  }

  tr:last-child td {
    padding-bottom: 0;
  }
}

.user__table-title {
  color: rgba($text-color, .3);
}