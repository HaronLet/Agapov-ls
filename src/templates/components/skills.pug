script(type="text/x-template")#skills-list
  .values__widget-container
    ul.skills
      li.skills__item(v-for="category in skills" :key="category.id")
        skills-row(
          :category="category"
        )

script(type="text/x-template")#skills-row
  .skills-row
    .skills-row__title {{category.category}}
    ul.skills-row__list
      li.skills-row__item(v-for="skill in category.skills" :key="skill.id")
        skills-item(
          :skill="skill"
        )

script(type="text/x-template")#skills-item
  .skill
    svg(viewBox="0 0 144 144").skill__circle-shape
      circle(cx="69" cy="69" r="63").skill__circle.skill__circle_under
      circle(cx="69" cy="69" r="63" ref="colored-circle" stroke="url(#gradient)" transform='rotate(180 69 69)').skill__circle.skill__circle_above
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color="#dc9322")
        stop(offset="100%" stop-color="#d0731b")
    .skill__circle-text {{skill.title}}